.custom-block
  .custom-block-title
    font-weight 600
    margin-bottom -0.4rem
  &.info, &.tip, &.warning, &.danger
    padding .1rem 1.5rem
    border-left-width .5rem
    border-left-style solid
    margin 1rem 0
    &::after
      content ''
      position absolute
      width 1rem
      height 1rem
      margin-left -2.3rem
      margin-top -5rem
      background var(--bg-color)
    &::before
      position absolute
      height 22px
      width 22px
      margin-left -2.55rem
      margin-top 0.9rem
      border 2px solid var(--bg-color)
      border-radius 50%
      z-index 2
  &.info
    border-color #007bff
    background-color var(--bg-color-secondary)
    &::before
      content url('../assets/icons/info.svg')
  &.tip
    border-color #42b983
    background-color var(--bg-color-secondary)
    .custom-block-title
      color darken(#42b983, 20%)
    &::before
      content url('../assets/icons/tip.svg')
  &.warning
    border-color #f4cd00
    background-color #fff9dc
    .custom-block-title
      color darken(#f4cd00, 25%)
    &::before
      content url('../assets/icons/warning.svg')
  &.danger
    border-color #f55
    background-color #ffe6e6
    .custom-block-title
      color #a33
    &::before
      content url('../assets/icons/danger.svg')
  &.details
    display block
    position relative
    border-radius 2px
    margin 1.6em 0
    padding 1.6em
    background-color var(--bg-color-secondary)
    color
    h4
      margin-top 0
    figure, p
      &:last-child
        margin-bottom 0
        padding-bottom 0
    summary
      outline none
      cursor pointer

// dark mode
html.dark
  .custom-block
    &.warning, &.danger
      background-color var(--bg-color-secondary)